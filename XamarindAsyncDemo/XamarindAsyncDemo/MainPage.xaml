<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarindAsyncDemo.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Xamarin Async Demo" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Make changes to your XAML file and save to see your UI update in the running app with XAML Hot Reload. Give it a try!" FontSize="16" Padding="30,0,30,0"/>

        <Label Text="Pomalé počítadlo" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name ="Slow" BackgroundColor="LightYellow" FontSize="Large" Margin="20, 0"/>
        
        <Label Text="Rychlé počítadlo" FontSize="Title" Padding="30,10,30,10"/>
        <Label x:Name ="Fast" BackgroundColor="LightYellow" FontSize="Large" Margin="20,0"/>

        <Button x:Name="Start" Text="Start" Clicked="Start_ClickedAsyncStoppable"/>
    </StackLayout>

</ContentPage>
